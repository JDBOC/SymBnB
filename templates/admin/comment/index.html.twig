{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
  <div class="container-fluid">
    <h1 class="my-5">Gestion des commentaires</h1>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Id</th>
        <th>Date</th>
        <th>Auteur</th>
        <th>Commentaire</th>
        <th>Note</th>
        <th>Annonce</th>
        <th>
          Actions
        </th>
      </tr>
      </thead>
      <tbody>
      {% for comment in pagination.data %}
        <tr>
          <td></td>
          <td>{{ comment.createdAt | date('d/m/Y') }}</td>
          <td><img src="{{ comment.author.picture }}" alt="Avatar de {{ comment.author.fullName }}"
                   class="avatar avatar-mini mr-2">
            {{ comment.author.fullName }}</td>
          <td>{{ comment.content }}</td>
          <td>
            <span class="badge badge-warning rounded">{{ comment.rating | number_format(1, ',') }}</span>
          </td>
          <td>
            {{ comment.ad.title }}
          </td>
          <td class="justify-content-between">
            <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-primary rounded"><i
                      class="fas fa-edit"></i></a>
            <a href="{{ path('admin_comment_delete', {id: comment.id}) }}" class="btn btn-danger rounded"><i
                      class="fas fa-trash"></i></a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <ul class="pagination">
        {% set page = pagination.currentPage %}
        {% set pages = pagination.pages %}
        <li class="page-item {% if page == 1 %}disabled{% endif %}">
          <a class="page-link" href="{{ path('admin_comment_index', {'page': page - 1}) }}">&laquo;</a>
        </li>
        {% for i in 1..pages %}
          <li class="page-item {% if page == i %} active {% endif %}">
            <a class="page-link" href="{{ path('admin_comment_index', {'page': i}) }}">{{ i }}</a>
          </li>
        {% endfor %}
        <li class="page-item {% if page == pages %}disabled{% endif %}">
          <a class="page-link" href="{{ path('admin_comment_index', {'page': page + 1}) }}">&raquo;</a>
        </li>
      </ul>
    </div>
  </div>
{% endblock %}
